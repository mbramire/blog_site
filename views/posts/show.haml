.content-wrapper
  .row 
    %img.lg-icon.pull-left{ src: (@post.category.image)}
    .hdr-cont
      %h1.post-header{ style: "color : #{@post.category.color}"}
        = @post.title
    %p.margin-top 
      = pretty_date(@post.created_at)  
    %p
      = @post.body
    
    %h2.margin-top-large
      %i.fa.fa-comment
      comments

    - @post.comments.each do |c|
      .comment-container
        .user-name
          %i.fa.fa-user.fa-inverse
          %span.bold-txt
            = c.name
          said on 
          = pretty_date(c.created_at)
        %p
          = c.body

    .clear
      %form{ action: "/post/#{@post.id}/comments", method: "post" }
        = haml :"shared/_errors", locals: {obj: @comment}

        %input{ type: "hidden", name: "comment[post_id]", value: "#{@post.id}" }

        %label{ for: "comment_body" }
        %textarea#post_body.pull-right{ name: "comment[body]", rows: "5" }
          = @comment.body
        %br

        %input.btn.pull-right{ type: "submit", value: "comment" }

        %input.pull-right.margin-right.margin-top{ id: "comment_name", name: "comment[name]", type: "text", value: "#{@comment.name}"}
        %label.pull-right.margin-top{ for: "comment_name" }
          %i.fa.fa-user.user-icon
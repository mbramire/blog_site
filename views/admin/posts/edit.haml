.content-wrapper
  .row 
    = haml :"shared/_errors", locals: {obj: @post}
    
    %h2 
      Edit Post

    %form{ action: "/admin/posts/#{@post.id}", method: "post"}
      %input{ type: "hidden", name: "_method", value: "put"}
      = haml :"/admin/posts/_post_form"
      %input.btn{type: "submit", value: "Update Post"}

    %form{ action: "/admin/posts/#{@post.id}", method: "post" }
      %input{ type: "hidden", name: "_method", value: "delete" }
      %input.btn.btn-delete{ type: "submit", value: "Delete Post"}